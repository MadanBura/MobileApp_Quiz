<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.QuizApplication" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.QuizApplication" parent="Base.Theme.QuizApplication" />

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background & Surface -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Button Styles -->
        <item name="android:buttonStyle">@style/GreenButton</item>
    </style>

    <!-- Button Styles -->
    <style name="GreenButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">16dp</item>
    </style>

</resources>
